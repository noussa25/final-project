
        // Initialisation de l'application Quiz
        const quizScreen = document.getElementById('quizScreen');
// Configuration du quiz - Questions et r√©ponses
        const quizData = [
            {
                question: "Quelle est la capitale de la France ?",
                answers: ["Londres", "Berlin", "Paris", "Madrid"],
                correct: 2
            },
            {
                question: "Combien de continents y a-t-il sur Terre ?",
                answers: ["5", "6", "7", "8"],
                correct: 2
            },
            {
                question: "Qui a peint la Joconde ?",
                answers: ["Vincent van Gogh", "Leonardo da Vinci", "Pablo Picasso", "Claude Monet"],
                correct: 1
            },
            {
                question: "Quel est le plus grand oc√©an du monde ?",
                answers: ["Oc√©an Atlantique", "Oc√©an Indien", "Oc√©an Arctique", "Oc√©an Pacifique"],
                correct: 3
            },
            {
                question: "En quelle ann√©e a eu lieu la r√©volution fran√ßaise ?",
                answers: ["1789", "1776", "1804", "1799"],
                correct: 0
            },
            {
                question: "Quelle est la plan√®te la plus proche du Soleil ?",
                answers: ["V√©nus", "Mercure", "Mars", "Terre"],
                correct: 1
            },
            {
                question: "Combien de c√¥t√©s a un hexagone ?",
                answers: ["5", "6", "7", "8"],
                correct: 1
            },
            {
                question: "Qui a √©crit 'Les Mis√©rables' ?",
                answers: ["Victor Hugo", "Alexandre Dumas", "√âmile Zola", "Gustave Flaubert"],
                correct: 0
            },
            {
                question: "Quelle est la formule chimique de l'eau ?",
                answers: ["CO2", "H2O", "O2", "NaCl"],
                correct: 1
            },
            {
                question: "Dans quel pays se trouve Machu Picchu ?",
                answers: ["Br√©sil", "Argentine", "P√©rou", "Chili"],
                correct: 2
            }
        ];

        // Variables globales pour le suivi du quiz
        let currentQuestion = 0;
        let score = 0;
        let selectedAnswer = null;
        let userAnswers = [];
        let quizStarted = false;

        // Fonction pour aller √† l'√©cran de d√©marrage depuis l'accueil
        function goToStart() {
            document.getElementById('homeScreen').classList.add('hidden');
            document.getElementById('startScreen').classList.remove('hidden');
        }

        // Fonction pour retourner √† l'accueil
        function goToHome() {
            // Cacher tous les √©crans
            document.getElementById('startScreen').classList.add('hidden');
            document.getElementById('questionScreen').classList.add('hidden');
            document.getElementById('resultsScreen').classList.add('hidden');
            document.getElementById('reviewScreen').classList.add('hidden');
            
            // Afficher l'√©cran d'accueil
            document.getElementById('homeScreen').classList.remove('hidden');
            
            // R√©initialiser les variables
            currentQuestion = 0;
            score = 0;
            selectedAnswer = null;
            userAnswers = [];
            document.getElementById('currentScore').textContent = '0';
            document.getElementById('progressBar').style.width = '0%';
        }

        // Fonction pour d√©marrer le quiz
        function startQuiz() {
            document.getElementById('startScreen').classList.add('hidden');
            document.getElementById('questionScreen').classList.remove('hidden');
            currentQuestion = 0;
            score = 0;
            userAnswers = [];
            quizStarted = true;
            showQuestion();
            updateProgress();
        }

        // Fonction pour afficher la question actuelle
        function showQuestion() {
            const question = quizData[currentQuestion];
            
            // Animation de disparition puis apparition
            const container = document.querySelector('.question-container');
            container.style.opacity = '0';
            container.style.transform = 'translateY(20px)';
            
            setTimeout(() => {
                document.getElementById('questionNumber').textContent = `Question ${currentQuestion + 1} sur ${quizData.length}`;
                document.getElementById('questionText').textContent = question.question;
                
                const answersContainer = document.getElementById('answersContainer');
                answersContainer.innerHTML = '';
                
                // Cr√©er les boutons de r√©ponse
                question.answers.forEach((answer, index) => {
                    const answerDiv = document.createElement('div');
                    answerDiv.classList.add('answer');
                    answerDiv.textContent = answer;
                    answerDiv.onclick = () => selectAnswer(index);
                    answersContainer.appendChild(answerDiv);
                });
                
                // R√©initialiser les boutons et feedback
                document.getElementById('submitBtn').style.display = 'none';
                document.getElementById('nextBtn').style.display = 'none';
                document.getElementById('feedback').innerHTML = '';
                document.getElementById('feedback').className = 'feedback';
                selectedAnswer = null;
                
                // Animation d'apparition
                container.style.opacity = '1';
                container.style.transform = 'translateY(0)';
            }, 200);
        }

        // Fonction pour s√©lectionner une r√©ponse
        function selectAnswer(index) {
            if (selectedAnswer !== null) return; // Emp√™cher la re-s√©lection apr√®s validation
            
            selectedAnswer = index;
            
            // Retirer la classe selected de toutes les r√©ponses
            document.querySelectorAll('.answer').forEach(answer => {
                answer.classList.remove('selected');
            });
            
            // Ajouter la classe selected √† la r√©ponse choisie
            document.querySelectorAll('.answer')[index].classList.add('selected');
            
            // Montrer le bouton de validation
            document.getElementById('submitBtn').style.display = 'inline-block';
        }

        // Fonction pour valider la r√©ponse
        function submitAnswer() {
            if (selectedAnswer === null) return;
            
            const question = quizData[currentQuestion];
            const isCorrect = selectedAnswer === question.correct;
            
            // Enregistrer la r√©ponse de l'utilisateur
            userAnswers.push({
                question: question.question,
                userAnswer: selectedAnswer,
                correctAnswer: question.correct,
                answers: question.answers,
                isCorrect: isCorrect
            });
            
            // Mettre √† jour le score
            if (isCorrect) {
                score++;
                document.getElementById('currentScore').textContent = score;
            }
            
            // Afficher le feedback visuel
            document.querySelectorAll('.answer').forEach((answer, index) => {
                if (index === question.correct) {
                    answer.classList.add('correct');
                } else if (index === selectedAnswer && !isCorrect) {
                    answer.classList.add('incorrect');
                }
            });
            
            // Afficher le feedback textuel
            const feedbackDiv = document.getElementById('feedback');
            if (isCorrect) {
                feedbackDiv.innerHTML = '‚úÖ Bonne r√©ponse !';
                feedbackDiv.classList.add('correct');
            } else {
                feedbackDiv.innerHTML = `‚ùå Mauvaise r√©ponse. La bonne r√©ponse √©tait : ${question.answers[question.correct]}`;
                feedbackDiv.classList.add('incorrect');
            }
            
            // Cacher le bouton de validation et montrer le bouton suivant
            document.getElementById('submitBtn').style.display = 'none';
            if (currentQuestion < quizData.length - 1) {
                document.getElementById('nextBtn').style.display = 'inline-block';
            } else {
                setTimeout(() => {
                    showResults();
                }, 3000); // Augmentation √† 3 secondes
            }
        }

        // Fonction pour passer √† la question suivante
        function nextQuestion() {
            currentQuestion++;
            updateProgress();
            if (currentQuestion < quizData.length) {
                showQuestion();
            } else {
                showResults();
            }
        }

        // Fonction pour mettre √† jour la barre de progression
        function updateProgress() {
            const progress = ((currentQuestion + 1) / quizData.length) * 100;
            document.getElementById('progressBar').style.width = progress + '%';
        }

        // Fonction pour afficher les r√©sultats finaux
        function showResults() {
            document.getElementById('questionScreen').classList.add('hidden');
            document.getElementById('resultsScreen').classList.remove('hidden');
            
            const percentage = Math.round((score / quizData.length) * 100);
            document.getElementById('finalScore').textContent = `${score}/${quizData.length} (${percentage}%)`;
            
            // D√©terminer la note et l'encouragement
            const gradeDiv = document.getElementById('gradeText');
            const encouragementDiv = document.getElementById('encouragement');
            
            if (percentage >= 80) {
                gradeDiv.textContent = 'Excellent !';
                gradeDiv.className = 'grade excellent';
                encouragementDiv.textContent = 'Bravo ! Tu ma√Ætrises vraiment bien ces sujets !';
            } else if (percentage >= 60) {
                gradeDiv.textContent = 'Bien jou√© !';
                gradeDiv.className = 'grade good';
                encouragementDiv.textContent = 'C\'est un bon r√©sultat ! Quelques r√©visions et tu seras au top !';
            } else {
                gradeDiv.textContent = 'Peut mieux faire';
                gradeDiv.className = 'grade average';
                encouragementDiv.textContent = 'Ne te d√©courage pas ! La pratique m√®ne √† la perfection !';
            }
        }

        // Fonction pour afficher la r√©vision des r√©ponses
        function showReview() {
            document.getElementById('resultsScreen').classList.add('hidden');
            document.getElementById('reviewScreen').classList.remove('hidden');
            
            const reviewContent = document.getElementById('reviewContent');
            reviewContent.innerHTML = '';
            
            userAnswers.forEach((item, index) => {
                const reviewItem = document.createElement('div');
                reviewItem.className = 'review-item';
                
                reviewItem.innerHTML = `
                    <div class="review-question">${index + 1}. ${item.question}</div>
                    <div class="review-answer user">Ta r√©ponse: ${item.answers[item.userAnswer]} ${item.isCorrect ? '‚úÖ' : '‚ùå'}</div>
                    ${!item.isCorrect ? `<div class="review-answer correct">Bonne r√©ponse: ${item.answers[item.correctAnswer]} ‚úÖ</div>` : ''}
                `;
                
                reviewContent.appendChild(reviewItem);
            });
        }

        // Fonction pour retourner aux r√©sultats
        function backToResults() {
            document.getElementById('reviewScreen').classList.add('hidden');
            document.getElementById('resultsScreen').classList.remove('hidden');
        }

        // Fonction pour recommencer le quiz
        function restartQuiz() {
            currentQuestion = 0;
            score = 0;
            selectedAnswer = null;
            userAnswers = [];
            
            // Cacher tous les √©crans et montrer l'√©cran de d√©marrage
            document.getElementById('resultsScreen').classList.add('hidden');
            document.getElementById('reviewScreen').classList.add('hidden');
            document.getElementById('questionScreen').classList.add('hidden');
            document.getElementById('homeScreen').classList.add('hidden');
            document.getElementById('startScreen').classList.remove('hidden');
            
            // R√©initialiser l'affichage
            document.getElementById('currentScore').textContent = '0';
            document.getElementById('progressBar').style.width = '0%';
        }

        // Initialisation au chargement de la page
        window.onload = function() {
            console.log('Quiz App Pro initialis√©e avec succ√®s ! üöÄ');
            console.log('Nouvelles fonctionnalit√©s: Page d\'accueil + couleurs vibrantes + timings am√©lior√©s');
        };
        // √âv√©nements pour les boutons
        document.getElementById('startQuizBtn').addEventListener('click', startQuiz);
        document.getElementById('submitBtn').addEventListener('click', submitAnswer);
